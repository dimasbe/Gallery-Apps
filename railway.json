{
  "build": {
    "installCommand": "composer install --ignore-platform-reqs && npm ci",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && (php-fpm -F & nginx -g 'daemon off;')"
  },
  "plugins": [
    "nginx",
    "php",
    "nodejs"
  ],
  "env": {
    "NGINX_ROOT": "/app/public"
  }
}