{
  "build": {
    "installCommand": "composer install --ignore-platform-reqs && npm ci",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "php-fpm -F --pid /tmp/php-fpm.pid --fpm-config /etc/php-fpm.conf && nginx -g 'daemon off;'"
  },
  "plugins": [
    "nginx",
    "php",
    "nodejs"
  ],
  "env": {
    "NGINX_ROOT": "/app/public"
  }
}