{
  "build": {
    "installCommand": "composer install --ignore-platform-reqs && npm ci",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && node /assets/scripts/prestart.mjs /app/nginx.template.conf /nginx.conf && (php-fpm -y /assets/php-fpm.conf & nginx -c /nginx.conf)"
  },
  "plugins": [
    "nginx",
    "php",
    "nodejs"
  ],
  "env": {
    "NGINX_ROOT": "/app/public"
  }
}